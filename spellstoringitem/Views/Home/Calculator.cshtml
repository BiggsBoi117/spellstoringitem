@{
    ViewData["Title"] = "Calculator";
}

<div class="text-center container">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="container">
    <p class="p-heading">
        Charging for services
    </p>
    <p>
        Here are my made up charges for tutoring new players:
    </p>
    <form>
        <label for="hours">Enter the number of hours:</label>
        <input type="number" id="hours" name="hours" required>
        <span id="hours-error"></span>
        <br/>

        <label for="rate">Hourly rate (USD):</label>
        <input type="number" id="rate" name="rate" value="10.00" readonly>
        <br/>

        <button id="calculate-btn">Calculate Total</button>
        <br/><br />

        <label for="total">Total Price:</label>
        <input type="text" id="total" name="total" value="$0.00" readonly>
    </form>
</div>